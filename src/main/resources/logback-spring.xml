<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %green(%logger{36}) - %yellow(%msg%n)</pattern>
        </encoder>
    </appender>
    <logger name="br.com.itau.veiculos.challenge.application" level="INFO" />
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>